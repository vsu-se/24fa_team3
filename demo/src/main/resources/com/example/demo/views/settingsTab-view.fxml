<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.views.SettingsTab">
   <children>
      <Label layoutX="14.0" layoutY="63.0" text="Enter Seller Commission Below:" />
      <Label layoutX="14.0" layoutY="158.0" text="Enter Buyer Premium Below:" />
      <TextField fx:id="SellerCommissionTxtF" layoutX="14.0" layoutY="97.0" prefHeight="26.0" prefWidth="166.0" />
      <TextField fx:id="BuyerPremiumTxtF" layoutX="14.0" layoutY="187.0" />
      <Button fx:id="SellerCommissionBtn" layoutX="188.0" layoutY="97.0" mnemonicParsing="false" onAction="#sellerCommission" text="Submit" />
      <Button fx:id="BuyerPremiumBtn" layoutX="170.0" layoutY="187.0" mnemonicParsing="false" onAction="#buyerPremium" text="Submit" />
      <Label fx:id="sellerCommissionErrorLbl" layoutX="272.0" layoutY="101.0" text="Please enter a positive number" textFill="#ec0909" visible="false" />
      <Label fx:id="BuyerPremiumErrorLbl" layoutX="258.0" layoutY="191.0" text="Please enter a positive number" textFill="#fa0000" visible="false" />
      <Label layoutX="297.0" layoutY="63.0" text="Set Date/Time Below:" />
      <DatePicker fx:id="SystemDateSetter" layoutX="297.0" layoutY="98.0" prefHeight="26.0" prefWidth="200.0"/>
      <TextField fx:id="SystemTimeSetter" layoutX="297.0" layoutY="135.0" prefHeight="26.0" prefWidth="200.0" promptText="Enter Time (HH:MM)" />
      <Button fx:id="SetSystemTimeButton" layoutX="505.0" layoutY="135.0" mnemonicParsing="false" onAction="#submitDateAndTime" text="Submit" />
      <Button fx:id="ResumeRealTimeBtn" layoutX="300.0" layoutY="187.0" mnemonicParsing="false" text="Click here to resume real time" />
   </children>
</AnchorPane>
